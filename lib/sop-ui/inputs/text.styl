sop-input()
  display block

  width 100%
  height 34px

  padding 6px 12px
  margin 0

  font inherit
  font-family inherit
  font-size inherit
  font-size 14px
  line-height 1.42857143

  color #555
  background-color #fff
  background-image none

  border 1px solid #ccc
  box-shadow inset 0 1px 1px rgba(0, 0, 0, .075)

  transition border-color ease-in-out .15s, box-shadow ease-in-out .15s

sop-text-input()
  sop-input()
